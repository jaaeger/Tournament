<Container>:
    orientation: 'vertical'

    empty: empty

    box_tournament: box_tournament.__self__
    id_title: id_title
    id_date: id_date
    id_place: id_place
    id_sport: id_sport
    id_format: id_format
    start_t: start_t

    box_players: box_players.__self__
    scroll_players: scroll_players
    id_team: id_team
    id_rate: id_rate
    id_country: id_country
    add_p: add_p

    box_draw: box_draw.__self__
    scroll_draw: scroll_draw
    start_d: start_d

    box_results: box_results.__self__
    results_label: results_label


    GridLayout:
        size_hint: 1, 0.15
        rows: 1
        cols: 4
        ToggleButton:
            text: 'Турнир'
            group: 'top'
            on_release:
                root.change_box(1)
        ToggleButton:
            text: "Участники"
            group: 'top'
            on_release:
                root.change_box(2)
        ToggleButton:
            text: "Жеребьевка"
            group: 'top'
            on_release:
                root.change_box(3)
        ToggleButton:
            text: "Результаты"
            group: 'top'
            on_release:
                root.change_box(4)

    Label:
        id: empty
        text: "Начните создавать турнир"

    BoxLayout:
        id: box_tournament
        orientation: "vertical"
        GridLayout:
            padding: [10, 10, 10, 10]
            spacing: [10, 10]
            rows: 5
            cols: 2
            Label:
                text: "Название турнира"
                font_size: 30
            TextInput:
                id: id_title
                padding: [6, 20, 6, 20]
                hint_text: "Tournament"
                font_size: 30
                multiline: False
            Label:
                text: "Дата проведения"
                font_size: 30
            TextInput:
                id: id_date
                padding: [6, 20, 6, 20]
                hint_text: "01.01.2023"
                font_size: 30
                multiline: False
            Label:
                text: "Место проведения"
                font_size: 30
            TextInput:
                id: id_place
                padding: [6, 20, 6, 20]
                hint_text: "Place "
                font_size: 30
                multiline: False
            Label:
                text: "Вид спорта"
                font_size: 30
            Spinner:
                id: id_sport
                # padding:
                pos_hint: {'center': (.5, .5)}
                text: "Hockey"
                font_size: 30
                values: "Hockey", "Football", "Volleyball", "Litrboll"
                on_text:
                    print('Hi')
            Label:
                text: "Формат турнира"
                font_size: 30
            Spinner:
                id: id_format
                pos_hint: {'center': (.5, .5)}
                text: "Single"
                font_size: 30
                values: "Single", "Double", "Other"
                on_text:
                    print('Hi')
        Button:
            id: start_t
            size_hint: 1, 0.1
            text: "Начать турнир"
            on_press:
                root.start_tournament()

    BoxLayout:
        id: box_players
        orientation: "vertical"
        ScrollView:
            do_scroll_x: False
            do_scroll_y: True
            GridLayout:
                id: scroll_players
                cols: 1
                size_hint_y: 10
                row_force_default: True
                row_default_height: 35
                GridLayout:
                    cols: 3
                    Label:
                        text: "Название команды"
                    Label:
                        text: "Место в рейтинге"
                    Label:
                        text: "Страна"
                GridLayout:
                    cols: 3
                    TextInput:
                        id: id_team
                        hint_text: "Name"
                        multiline: False
                    TextInput:
                        id: id_rate
                        hint_text: "1"
                        multiline: False
                    TextInput:
                        id: id_country
                        hint_text: "Country"
                        multiline: False
                Button:
                    id: add_p
                    text: "Добавить участника"
                    on_press:
                        root.add_player()

    BoxLayout:
        id: box_draw
        orientation: "vertical"
        ScrollView:
            do_scroll_x: False
            do_scroll_y: True
            GridLayout:
                id: scroll_draw
                cols: 1
                size_hint_y: 10
                row_force_default: True
                row_default_height: 35
                Button:
                    id: start_d
                    text: "Жеребьевка"
                    on_press:
                        root.start_draw()


    BoxLayout:
        id: box_results
        orientation: "vertical"
        Label:
            id:results_label
            text: "Results"
