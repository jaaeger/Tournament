<Container>:
    orientation: 'vertical'

    id_title: id_title
    id_date: id_date
    id_place: id_place
    id_sport: id_sport
    id_format: id_format
    # id_count: id_count
    start_t: start_t
    result_label: result_label
    add_player: add_player
    start_d: start_d
    #show_players: show_players
    scroll_players: scroll_players
    scroll_draw: scroll_draw
    team: team
    rate: rate
    country: country
    tournament: tournament
    players: players
    draw: draw
    results: results
    empty: empty
    box_tournament: box_tournament.__self__
    box_players: box_players.__self__
    box_draw: box_draw.__self__
    box_results: box_results.__self__

    GridLayout:
        size_hint: 1, 0.15
        rows: 1
        cols: 4
        ToggleButton:
            id: tournament
            text: 'Турнир'
            group: 'top'
            on_release:
                root.change_box(1)
            #on_press: print("ouch! More gently please")
            #on_release: print("ahhh")
            #on_state:print("my current state is {}".format(self.state))
        ToggleButton:
            id: players
            text: "Участники"
            group: 'top'
            on_release:
                root.change_box(2)
        ToggleButton:
            id: draw
            text: "Жеребьевка"
            group: 'top'
            on_release:
                root.change_box(3)
        ToggleButton:
            id: results
            text: "Результаты"
            group: 'top'
            on_release:
                root.change_box(4)

    Label:
        id: empty
        text: "Начните создавать турнир"

    BoxLayout:
        id: box_tournament
        orientation: "vertical"
        GridLayout:
            padding: [10, 10, 10, 10]
            spacing: [10, 10]
            # size_hint: 1, 0.9
            rows: 5
            cols: 2
            Label:
                text: "Название турнира"
                font_size: 30
            TextInput:
                id: id_title
                padding: [6, 20, 6, 20]
                hint_text: "Name"
                font_size: 30
                # halign: "center"
                multiline: False
            Label:
                text: "Дата проведения"
                font_size: 30
            TextInput:
                id: id_date
                padding: [6, 20, 6, 20]
                hint_text: "Date"
                font_size: 30
                multiline: False
            Label:
                text: "Место проведения"
                font_size: 30
            TextInput:
                id: id_place
                padding: [6, 20, 6, 20]
                hint_text: "Place"
                font_size: 30
                multiline: False
            Label:
                text: "Вид спорта"
                font_size: 30
            Spinner:
                id: id_sport
                # padding:
                pos_hint: {'center': (.5, .5)}
                text: "Hockey"
                font_size: 30
                values: "Hockey", "Football", "Volleyball", "Litrboll"
                on_text:
                    print('Hi')
            # TextInput:
                # id: id_sport
                # padding: [6, 20, 6, 20]
                # hint_text: "Sport"
                # font_size: 30
                # multiline: False
            Label:
                text: "Формат турнира"
                font_size: 30
            # GridLayout:
                # size_hint: 1, 0.15
                # rows: 1
                # cols: 2
            Spinner:
                id: id_format
                # padding:
                pos_hint: {'center': (.5, .5)}
                text: "Single"
                font_size: 30
                values: "Single", "Double", "Other"
                on_text:
                    print('Hi')
                # TextInput:
                    # id: id_format
                    # padding: [6, 20, 6, 20]
                    # background_color: [1,1,1,1]
                    # hint_text: "Format"
                    # font_size: 30
                    # multiline: False
                # TextInput:
                    # id: id_count
                    # padding: [6, 20, 6, 20]
                    # size_hint: 0.35, 1
                    # hint_text: "Count"
                    # font_size: 30
                    # multiline: False
        Button:
            id: start_t
            size_hint: 1, 0.1
            text: "Начать турнир"
            on_press:
                root.start_tournament()
        # Spinner:
            # size_hint: None, None
            # size: 100, 44
            # pos_hint: {'center': (.5, .5)}
            # text: 'Home'
            # values: 'Home', 'Work', 'Other', 'Custom'
            # on_text:
                # print("The spinner {} has text {}".format(self, self.text))




    BoxLayout:
        id: box_players
        orientation: "vertical"
        #Label:
        #    text: "Players"
        ScrollView:
            do_scroll_x: False
            do_scroll_y: True
            #always_overscroll: True
            GridLayout:
                id: scroll_players
                cols: 1
                #minimum_height: 1000
                size_hint_y: 10
                row_force_default: True
                row_default_height: 35
                #text_size: self.width, None
                GridLayout:
                    cols: 3
                    Label:
                        text: "Название команды"
                    Label:
                        text: "Место в рейтинге"
                    Label:
                        text: "Страна"
                GridLayout:
                    cols: 3
                    TextInput:
                        id: team
                        hint_text: "Team"
                        multiline: False
                    TextInput:
                        id: rate
                        hint_text: "Rate"
                        multiline: False
                    TextInput:
                        id: country
                        hint_text: "Country"
                        multiline: False
                Button:
                    id: add_player
                    text: "Добавить участника"
                    on_press:
                        root.add_player_scroll()


    BoxLayout:
        id: box_draw
        orientation: "vertical"
        ScrollView:
            do_scroll_x: False
            do_scroll_y: True
            # always_overscroll: True
            GridLayout:
                id: scroll_draw
                cols: 1
                size_hint_y: 10
                row_force_default: True
                row_default_height: 35
                #GridLayout:
                    #cols: 4
                    #Label:
                        #text: "№"
                    #Label:
                        #text: "Название команды"
                    #Label:
                        #text: "Место в рейтинге"
                    #Label:
                        #text: "Страна"
                #Button:
                    #id: show_players
                    #text: "Показать игроков"
                    #on_press:
                        #root.add_playerS_draw()
                Button:
                    id: start_d
                    text: "Начать жеребьевку"
                    on_press:
                        root.start_draw()


    BoxLayout:
        id: box_results
        orientation: "vertical"
        Label:
            id:result_label
            text: "Results"
